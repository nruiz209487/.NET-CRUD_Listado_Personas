        <Label Text="Nombre" FontAttributes="Bold" />
        <Label Text="{Binding candidatoSeleccionado.Nombre}" />

        <Label Text="Apellidos" FontAttributes="Bold" />
        <Label Text="{Binding candidatoSeleccionado.Apellidos}" />

        <Label Text="TelÃ©fono" FontAttributes="Bold" />
